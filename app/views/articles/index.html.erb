<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'tickets/show' %>
<% end %>
<div class='container'>
  <%= render 'search_field' %>
  <h2 class='heading'>Articles</h2>
  <% if @articles.present? %>
    <% if params[:q] && params[:q][:title_or_description_cont].present? %>
        <h3><%= pluralize(@articles.count, 'result') %> found</h3>
    <% end %>
    <div class='pagination-info'>
      <p><%= pagination_info @articles %> articles</p>
    </div>
    <table class='table table-striped'>
      <% @articles.each do |article| %>
        <tr>
          <td class='size'><%= link_to article.title.capitalize, article_path(article) %></td>
        </tr>
      <% end %>
    </table>
    </ul>
  <% elsif params[:q] %>
    <h3> No Result Found </h3>
  <% else %>
    <h3>Currently No Articles</h3>
  <% end %>
  <div class='pagination'>
    <%= paginate @articles %>
  </div>
</div>
