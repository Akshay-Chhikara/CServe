<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'company', 'data-turbolinks-track' => true %>
<% end %>
<div class='container'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal sign-up-form'}) do |f| %>
      <h2>Company Sign up</h2><br />
      <div class='form-group'>
        <%= f.label :email, 'Admin Email*', class:'col-sm-4 control-label' %>
        <div class='col-sm-8'>
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Admin Email"  %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :name, 'Admin name*', class:'col-sm-4 control-label' %>
        <div class='col-sm-8'>
          <%= f.text_field :name, class: 'form-control', :placeholder => "Admin Name" %>
        </div>
      </div>
      <div class='password-container'>
        <div class='form-group'>
          <%= f.label :password, 'Password*', class:'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.password_field :password, autocomplete: "off",class: 'form-control ', placeholder: "Password"  %>
          </div>
          <div class='instructions'>
            <span>Password minimum 8 characters: Letters, numbers or symbols</span>
          </div>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :password_confirmation, 'Confirm password*', class:'col-sm-4 control-label' %>
        <div class='col-sm-8'>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Confirm Password"  %>
        </div>
      </div>
    <div style="display:none">
      <%= f.hidden_field :role, value: 'super_admin' %>
    </div>
    <%= f.fields_for @company do |company_form| %>
      <div class='form-group'>
        <%= company_form.label :name, 'Company Name*', class:'col-sm-4 control-label' %>
        <div class='col-sm-8'>
          <%= company_form.text_field :name, class: 'form-control', :placeholder => "Company Name" %>
        </div>
      </div>
      <div class='form-group'>
        <%= company_form.label :subdomain, 'Company Subdomain*', class:'col-sm-4 control-label' %>
        <div class='col-sm-8'>
          <%= company_form.text_field :subdomain, class: 'form-control', :placeholder => "Company Subdomain" %>
        </div>
      </div>
    <% end %>

    <%= f.submit "Sign up", class: "btn btn-primary form-control" %>
  <% end %>
</div>
