<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'company', 'data-turbolinks-track' => true %>
<% end %>
<div class='container'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin form' }) do |f| %>
      <h2>Company Sign up</h2><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Admin Email"  %><br />
      <%= f.text_field :name, class: 'form-control', :placeholder => "Admin Name" %><br />
      
      <div class='password-container'>
        <%= f.password_field :password, autocomplete: "off",class: 'form-control ', placeholder: "Password"  %>
          <div class='instructions'>
            <span>Password minimum 8 characters: Letters, numbers or symbols</span>
          </div>
      </div><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Password  confirmation"  %>
    <div style="display:none">
      <%= f.hidden_field :role, value: 'super_admin' %>
    </div><br />
    <%= f.fields_for @company do |company_form| %>
      <%= company_form.text_field :name, class: 'form-control', :placeholder => "Company Name" %><br />
      <%= company_form.text_field :subdomain, class: 'form-control', :placeholder => "Company subdomain" %>
    <% end %><br />

    <%= f.submit "Sign up", class: "btn btn-primary form-control" %>
  <% end %>
</div>
