<div class='container'>
  <%= link_to('Add Category', new_admins_category_path, class: ' btn btn-primary pull-right pt-29') %>
  <% if @categories.present? %>
    <h2 class='heading'>Categories List</h2>
    <div>
      <div class='pagination-info'>
        <p><%= pagination_info @categories %></p>
      </div>
    </div>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>#ID</th>
          <th>Name</th>
          <th>Status</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td>
              <% if category.enabled? %>
                Enabled
              <% else %>
                Disabled
              <% end %>
            </td>
            <td><%= category.created_at.to_s(:long) %></td>
            <td><%= link_to 'Edit', edit_admins_category_path(category) %> | 
              <%= link_to_toggle_status(category) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class='pagination'>
      <%= paginate @categories %>
    </div>
  <% else %>
    <h2 class='heading'>Currently no categories</h2>
  <% end %>
</div>
