<div class='container'>
  <%= link_to 'All', tickets_path %> | 
  <%= link_to 'New', tickets_path(status: :unassigned) %>
      <div class='search' %>
        <%= search_form_for @search do |f| %>
          <%= f.label :email_eq, 'Search by Email : ' %>
          <%= f.text_field :email_eq %>
        <% end %>
      </div>
      <div>
        <%= search_form_for @search do |f| %>
          <%= f.select :admin_id_eq, company_admins %>
          <%= f.select(:state_eq, [['Select status', ''] , ['Assigned', 'assigned'], ['Resolved', 'resolved'], ['Closed', 'closed']]) %>
          <%= f.submit 'Search', class: 'btn btn-primary' %>
        <% end %>
      </div>

  <% if @tickets.present? %>
    <h2 class='heading'>Tickets List</h2>
      <div>
        <div class='pagination-info'>
          <p><%= pagination_info @tickets %></p>
        </div>
      </div>
      <table class='table table-striped'>
        <thead>
          <tr>
            <th>#ID</th>
            <th>Subject</th>
            <th>Status</th>
            <th>Assignee</th>
            <th>Updated At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tickets.each do |ticket| %>
            <tr>
              <td><%= ticket.id %></td>
              <td><%= ticket.subject.truncate(30) %></td>
              <td><%= ticket.state.capitalize %></td>
              <% if ticket.admin_id %>
                <td><%= ticket.admin_name.capitalize %></td>
              <% else %>
                <td>Unassigned</td>
              <% end %>
              <td><%= ticket.updated_at.to_s(:long) %></td>
              <td>
                <% if ticket.admin_id.nil? %>
                  <%= link_to 'View', ticket_path(ticket), data: { confirm: 'This will assign you the ticket, press ok to continue.' } %>
                <% else %>
                  <%= link_to 'View', ticket_path(ticket) %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class='pagination'>
        <%= paginate @tickets %>
      </div>
  <% else %>
    <h3 class='heading'>No tickets</h3>
  <% end %>
</div>
